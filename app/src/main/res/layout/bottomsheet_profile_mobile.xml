<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="?attr/actionBarSize"
    >


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call +918113909239"
            android:padding="20dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:id="@+id/callMobile"
            android:visibility="gone"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:id="@+id/newMobileSection">

        <EditText
            android:id="@+id/newUserMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Enter your Phone Number"
            android:inputType="phone"
            />
        <Button
            android:id="@+id/verifyPhone"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:layout_marginTop="7dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:id="@+id/verfiyOTPSection"
        >

        <EditText
            android:id="@+id/OTPText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Enter the 6 digit OTP"
            android:inputType="phone"
            />
        <Button
            android:id="@+id/verifyOTP"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Verify "
            android:layout_marginTop="7dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="If you dont receive your otp within 5 minutes ,our devices might be offline. Please try again later."
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/resendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:text="Resend OTP"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>